@model PostViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Excerpt)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Excerpt)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreatedDateLocal)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedDateLocal)
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Author
                </th>              
                <th>
                    Content
                </th>
                <th>
                    CreatedDateLocal
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Comments.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDateLocal)
                    </td>
                    <td>
                        <a asp-action="DeleteComment" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
          
        </tbody>
    </table>
    @Html.Partial("_AddComment", new CommentViewModel() { PostId = Model.Id })
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
