@model PostViewModel

@{
    ViewData["Title"] = "Edit";
    ViewData["PageTitle"] = "Edit Blog";
}

<h2>Edit</h2>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Author" type="hidden"/>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeoName" class="control-label"></label>
                <input asp-for="SeoName" class="form-control" />
                <span asp-validation-for="SeoName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Excerpt" class="control-label"></label>
                <input asp-for="Excerpt" class="form-control" />
                <span asp-validation-for="Excerpt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea id="markdown-editor" asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-default" />
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {

    <script>
        var simplemde = new SimpleMDE({ element: document.getElementById("markdown-editor") });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
