@using Microsoft.AspNetCore.Identity
@using SimpleBlog.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

<ul class="navbar-nav ml-auto">
    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Posts" asp-action="">Manage</a></li>
    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
            <a asp-controller="Account" asp-action="Logout" class="nav-link">Log out</a>
    </li>
</ul>



}
else
{
<ul class="navbar-nav ml-auto">
    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
</ul>
}
